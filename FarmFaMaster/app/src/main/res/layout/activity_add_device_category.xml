<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#FFFFFF"
    tools:context=".ui.device_catogory.AddDeviceCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_category" />

        <EditText
            android:id="@+id/device_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/choose_img_vi" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/device_category_image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="7dp"
                    android:src="@drawable/cambienmua" />

                <!--    button to show picker diaglog-->

                <ImageView
                    android:id="@+id/device_category_image2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/quat" />


                <ImageView
                    android:id="@+id/device_category_image3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/maybo2" />
            </TableRow>

            <ProgressBar

                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/device_category_image4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="7dp"
                    android:src="@drawable/bongden" />

                <!--    button to show picker diaglog-->
            </TableRow>

        </TableLayout>


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <!--                <ImageView-->
                <!--                    android:id="@+id/photo_camera"-->
                <!--                    android:background="@null"-->
                <!--                    android:layout_width="150dp"-->
                <!--                    android:layout_height="150dp"-->
                <!--                    android:padding="10dp"-->
                <!--                    android:scaleType="centerInside"-->
                <!--                    android:src="@drawable/imagecamera" />-->

                <ImageView
                    android:id="@+id/selected_device_category_image"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/imagegallery" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_add_category"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_add2"
            android:text="@string/add_vi"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cancel_action_device_category"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_cancel"
            android:text="@string/cancel_vi"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/cai_dat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00c5cd"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/temp_param_vi"
                android:textStyle="bold" />
        </LinearLayout>

        <!--    end nhiet do-->

        <LinearLayout
            android:id="@+id/linear_temperature_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cai_dat"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1.3">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#82cbf6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/day_vi"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#82cbf6" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/table_layout_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_temperature_day"
            android:padding="5dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/from_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/temp_day_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/to_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/temp_day_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />
            </TableRow>
        </TableLayout>
        <!--    end nhiet do ban ngayf-->


        <LinearLayout
            android:id="@+id/linear_nhiet_do_ban_dem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_layout_day"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1.3">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#82cbf6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/night_vi"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#82cbf6" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/table_layout_ban_dem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_nhiet_do_ban_dem"
            android:padding="5dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/from_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/temp_night_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/to_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/temp_night_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />
            </TableRow>
        </TableLayout>
        <!--    end nhiet do ban ddem-->

        <LinearLayout
            android:id="@+id/linear_ppm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_layout_ban_dem"
            android:background="#00c5cd"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/motor_tds_full_mode_vi"
                android:textStyle="bold" />
        </LinearLayout>


        <TableLayout
            android:id="@+id/table_layout_ppm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_ppm"
            android:padding="5dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/from_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ppm_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/to_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ppm_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linear_ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_layout_ppm"
            android:background="#00c5cd"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/Do_ph_vi"
                android:textStyle="bold" />
        </LinearLayout>


        <TableLayout
            android:id="@+id/table_layout_pH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_ph"
            android:padding="5dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/from_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ph_from"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/to_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ph_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linear_tds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_layout_ppm"
            android:background="#00c5cd"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/level_TDS_for_param_vi"
                android:textStyle="bold" />
        </LinearLayout>


        <TableLayout
            android:id="@+id/table_layout_tds_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_ph"
            android:padding="5dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/from_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tds_level_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/to_vi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tds_level_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:inputType="number|numberDecimal" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_add_param"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_add2"
            android:text="@string/add_vi"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cancel_action_param"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_cancel"
            android:text="@string/cancel_vi"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
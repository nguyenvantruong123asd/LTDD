<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.garden.ThemKhuVuonActivity">



    <LinearLayout
        android:id="@+id/EditGarden_Function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_kv_vi" />

        <EditText
            android:id="@+id/garden_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/choose_img_vi" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_image_garden_1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:src="@drawable/kv2" />

                <!--    button to show picker diaglog-->

                <ImageView
                    android:id="@+id/add_image_garden_2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/kv3" />


                <ImageView
                    android:id="@+id/add_image_garden_3"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/kv4" />
            </TableRow>

            <ProgressBar
                android:id="@+id/addveg_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"

                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_image_garden_4"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:src="@drawable/kv5" />

                <!--    button to show picker diaglog-->

                <ImageView
                    android:id="@+id/add_image_garden_5"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/kv6" />


                <ImageView
                    android:id="@+id/add_image_garden_6"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/kv7" />
            </TableRow>

        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/edit_garden_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_menu_camera" />

                <ImageView
                    android:id="@+id/edit_garden_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_menu_gallery" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/selected_garden_image_edit"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/imagegallery" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_edit_garden"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_add2"
            android:text="@string/update_vi"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cancel_action_garden_edit"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_cancel"
            android:text="@string/cancel_vi"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_khuvuon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_khungkhuvuon"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_kv"
        android:layout_width="400dp"
        android:padding="5dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/name_kv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_kv"
        android:layout_centerHorizontal="true"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deviceSettingNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_kv"
        android:layout_gravity="left"
        android:text="chá»‹ch"
        android:paddingBottom="15dp"
        android:textSize="14dp" />


</LinearLayout>
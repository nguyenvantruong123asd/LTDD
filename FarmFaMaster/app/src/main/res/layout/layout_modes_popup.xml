<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_device_detail_image"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_gravity="center|right"
        android:background="@drawable/border_backgroud_logo"
        android:src="@drawable/mode"
        android:padding="2dp" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_mode_code_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="MODE2202"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/view_mode_time_info_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="7.5dp"
            android:text="Khung giờ: 10:23 - 14:20, Bật: 10, Tắt: 10" />

        <TextView
            android:id="@+id/view_mode_time_repeat_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#34eb46"
            android:textSize="12dp"
            android:text="T2,T3,T4" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <CheckBox
            android:id="@+id/mode_checked_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|top"
            android:scaleType="fitCenter"
            android:text="@string/choose_vi" />

    </LinearLayout>

</LinearLayout>
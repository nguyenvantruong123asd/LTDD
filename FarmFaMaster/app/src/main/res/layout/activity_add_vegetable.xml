<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#FFFFFF"
    tools:context=".ui.vegetable.AddVegetableActivity">

    <LinearLayout
        android:id="@+id/addveg_vegfunction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_name_veg" />

        <EditText
            android:id="@+id/veg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/choose_img_vi" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_image1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:src="@drawable/xalach" />

                <!--    button to show picker diaglog-->

                <ImageView
                    android:id="@+id/add_image2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/raucai" />


                <ImageView
                    android:id="@+id/add_image3"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/xuplo" />

                <ImageView
                    android:id="@+id/add_image4"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/raumuong" />
            </TableRow>

            <ProgressBar
                android:id="@+id/addveg_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"

                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_image5"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:src="@drawable/ot" />

                <!--    button to show picker diaglog-->

                <ImageView
                    android:id="@+id/add_image6"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/dualeo" />


                <ImageView
                    android:id="@+id/add_image7"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/bido" />

                <ImageView
                    android:id="@+id/add_image8"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cachua" />
            </TableRow>

        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_menu_camera" />

                <ImageView
                    android:id="@+id/add_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_menu_gallery" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

<!--                <ImageView-->
<!--                    android:id="@+id/photo_camera"-->
<!--                    android:background="@null"-->
<!--                    android:layout_width="150dp"-->
<!--                    android:layout_height="150dp"-->
<!--                    android:padding="10dp"-->
<!--                    android:scaleType="centerInside"-->
<!--                    android:src="@drawable/imagecamera" />-->

                <ImageView
                    android:id="@+id/selected_image"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/imagegallery" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/add_veg"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_add2"
            android:text="@string/add_vi"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cancel_action_veg"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_cancel"
            android:text="@string/cancel_vi"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>